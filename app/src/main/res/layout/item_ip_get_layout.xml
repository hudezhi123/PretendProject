<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp">

    <LinearLayout
        android:id="@+id/linear_bar_ip_get"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ip_get_no"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_ip_get_amount"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_ip_get_state"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_ip_get_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textColor="#999999"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_ip_get_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_bar_ip_get"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:textColor="#0189ff"
        android:textSize="10sp" />
</RelativeLayout>